<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:gravity="center"
  tools:context=".activities.audio.AudioActivity">
  <TextView
    android:id="@+id/txt_record"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:textSize="54sp"
    android:textStyle="bold"/>

  <RelativeLayout
    android:layout_marginTop="28dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageButton
      android:id="@+id/btn_record"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:background="@null"
      android:contentDescription="@string/record_description"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_record"
    />
    <ImageButton
      android:id="@+id/btn_record_stop"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:background="@null"
      android:contentDescription="@string/record_description"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_stop"
      android:visibility="gone"
    />
  </RelativeLayout>

  <TextView
    android:id="@+id/txt_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:textColor="@android:color/black"
    android:textSize="54sp"
    android:textStyle="bold"
    android:gravity="center"
  />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="28dp">

    <ImageButton
      android:id="@+id/btn_play"
      android:layout_toStartOf="@+id/btn_pause"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:background="@null"
      android:contentDescription="@string/record_description"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_play"/>

    <ImageButton
      android:id="@+id/btn_play_stop"
      android:layout_toEndOf="@+id/btn_pause"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:background="@null"
      android:contentDescription="@string/record_description"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_stop"/>

    <ImageButton
      android:id="@+id/btn_pause"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_centerHorizontal="true"
      android:layout_marginEnd="6dp"
      android:layout_marginStart="6dp"
      android:background="@null"
      android:contentDescription="@string/record_description"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_pause"
    />
  </RelativeLayout>
  <LinearLayout
    android:layout_marginTop="12dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
      android:id="@+id/btn_step_back"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:background="@null"
      android:contentDescription="@string/record_description"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_step_back"
      android:layout_marginEnd="4dp"
    />
    <ImageButton
      android:id="@+id/btn_step_forward"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_marginStart="4dp"
      android:background="@null"
      android:contentDescription="@string/record_description"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_step_forward"
      />
  </LinearLayout>

</LinearLayout>